<ul class="inline-menu">
  <li><%= button_link_to t(:back_to_active_sale_events), edit_admin_active_sale_active_sale_event_url(@active_sale_event.active_sale, @active_sale_event), :icon => 'icon-arrow-left' %></li>
</ul>


<%= form_for [:admin, @active_sale_event, @sale_image], :html => { :multipart => true } do |f| %>
  <fieldset data-hook="new_image">
    <legend align="center"><%= t(:new_image) %></legend>

      <%= render :partial => 'form', :locals => { :f => f } %>
    
      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button t(:save), 'icon-refresh' %>
        <span class="or"><%= t(:or) %></span>
        <%= link_to_with_icon 'icon-remove', t(:cancel), admin_active_sale_active_sale_event_url(@active_sale_event.active_sale,@active_sale_event), :id => 'cancel_link', :class => 'button' %>
      </div>
  </fieldset>
<% end %>

